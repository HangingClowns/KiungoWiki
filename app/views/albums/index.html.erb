<%= title("Albums") %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Released Date</th>
      <th>Label</th>
      <th>Media Type</th>
      <th>Reference Code</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
    <tr>
      <td>
        <%= link_to album.title, album_path(album) %>
      </td>
      <td>
      	<% if (album.date_released != "0-00-00") then %>
             <%= album.date_released %>
      	<% end %>
      </td>
      <td>
        <%= album.label %>
      </td>
      <td>
        <%= album.media_type %>
      </td>
      <td>
        <%= album.reference_code %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>



