<%= title(Album.model_name.human.pluralize) %>

<%= render partial: 'common/search' %>

<%= link_to 'New', new_album_path %>
<%= paginate @albums %>

<table>
  <thead>
    <tr>
      <th><%= Album.human_attribute_name("title") %></th>
      <th><%= Album.human_attribute_name("date_released") %></th>
      <th><%= Album.human_attribute_name("label") %></th>
      <th><%= Album.human_attribute_name("media_type") %></th>
      <th><%= Album.human_attribute_name("reference_code") %></th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
    <tr>
      <td>
        <%= link_to album.title, album_path(album) %>
      </td>
      <td>
      	<% if (album.date_released != "0-00-00") then %>
             <%= album.date_released %>
      	<% end %>
      </td>
      <td>
        <%= album.label %>
      </td>
      <td>
        <%= album.media_type %>
      </td>
      <td>
        <%= album.reference_code %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @albums %>

<%= link_to 'New', new_album_path %>

