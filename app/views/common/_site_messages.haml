- {:info=>t("messages.info"), :error=>t("messages.error"), :alert=>t("messages.alert"), :warning=>t("messages.alert"), :notice=>t("messages.notice")}.each do |msg_type, heading|
  - if flash[msg_type]
    .row
      .span12
        %div.alert{:class => site_message_class(msg_type)}
          %h3= heading
          %p= flash[msg_type]

