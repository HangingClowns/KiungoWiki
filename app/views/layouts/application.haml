!!!
%html
  %head
    %title
      = content_for(:title).blank? ? "KiungoWiki" : content_for(:title) +  " - KiungoWiki"

    = stylesheet_link_tag :all

    = javascript_include_tag "bootstrap"
    = javascript_include_tag "jquery"
    = javascript_include_tag "jquery_ujs"
    = javascript_include_tag "jquery.tokeninput"
    = javascript_include_tag "application"

    = csrf_meta_tag

    = render :partial=>"common/google_analytics"

  %body{"data-spy"=>"scroll", "data-target"=>".subnav", "data-offset"=>50}


    #content
      .container
        .inner.row
          .span12
            = yield


    #header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to root_url, :class=>"brand" do
            #sitetitle KiungoWiki
          %em#siteslogan La référence en musique.

          %ul.nav.entities
            %li= link_to "Accueil", root_url
            %li= link_to "Artistes", artists_path
            %li= link_to "Oeuvres", works_path
            %li= link_to "Enregistrements", recordings_path
            %li= link_to "Albums", albums_path

          %ul.nav.profile.pull-right
            %li= link_to "Mon profil", edit_user_registration_path
            - if current_user
              %li= link_to "Se déconnecter", destroy_user_session_path, :method=>"delete"
            - else
              %li= link_to "Créer un compte ou se connecter", new_user_session_path

    %footer#footer.footer
      .container
        .row
          .navbar
            .navbar-inner
              %ul.nav
                %li= link_to "Accueil", root_url
                %li= link_to "Changements récents", "#"
                %li= link_to "Conditions d'utilisation", "#"
                %li= link_to "Nous contacter", "#"
                %li= link_to "À propos de KiungoWiki", "#"
                %li= link_to "Plan du site", "#"
          %p#copyright.span12 © 2012 - KiungoWiki
   
    = render partial: "common/site_messages"

