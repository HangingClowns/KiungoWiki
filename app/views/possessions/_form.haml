= form_for(@possession) do |f|
  - if @possession.errors.any?
    #error_explanation
      %h2
        = t('messages.error')
      %ul
        - @possession.errors.full_messages.each do |msg|
          %li
            = msg
  %p
    = f.label :release_wiki_link_text, t('addmusic.release')
    = f.text_field :release_wiki_link_text, 'data-pre' => @possession.release_wiki_link? ? [@possession.release_wiki_link.combined_link].to_json : "", class: "release_title_lookup"
  %p
    = f.label :display_title
    = f.text_field :display_title, class: "span5"
  %p
    = f.label :labels_text, t('addmusic.labels')
    = f.text_field :labels_text, 'data-pre' => @possession.tokenized_labels, class: "labels_lookup"
  %p
    = f.label :acquisition_date, t('addmusic.acquisitiondate')
    = f.text_field :acquisition_date, id: "acquisition_date"
  %p
    = f.label :rating, t('addmusic.rating')
    = f.text_field :rating
  %p
    = f.label :comments, t('addmusic.comments')
    = f.text_area :comments, class: "span10"
  .actions
    = f.submit class: "btn btn-primary"
    #{t('or')} #{link_to t("cancel"), :back, class: "btn"}
