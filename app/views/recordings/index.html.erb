<%= title("Recordings") %>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date</th>
      <th>Dur√©e</th>
      <th>Artiste(s)</th>
      <th>Album(s)</th>
    </tr>
  </thead>
  <tbody>
    <% @recordings.each do |recording| %>
    <tr>
      <td><%= link_to recording.title, recording_path(recording) %></td>
