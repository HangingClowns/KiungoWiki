= title(@release.title)

.row
  = render partial: 'links'
  - if current_user
    = render partial: 'common/tag_form', locals: {title: @release.title, resource: @release}
    = render partial: 'add_music'
  .span12
    = render partial: 'info'
    - if @release.supplementary_sections.size > 0
      = link_to t('report_content'), report_release_path(@release)