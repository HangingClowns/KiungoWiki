%h1
  = t('headers.user_tag_index')

.row
  .span4

    %p 
      = link_to t('headers.new_user_tag'), new_user_tag_path, class: "btn"

  .span8
    %h2= t('headers.user_tag_index')

    - if @possessions.size > 0
      %table.table.table-striped
        %thead
          %tr
            %th
              = t('headers.user_tag_index')
        %tbody
          - @user_tags.each do |tag|
            %tr
              %td
                = tag.name
              %td
                = link_to t('modify'), edit_user_tag_path(tag)
              %td
                = link_to t('delete'), tag, method: :delete, confirm: t('messages.confirm')
