<%= title(@work.title) %>

<div class="section summary">
  <p><%= Work.human_attribute_name("date_written") %>: <%= @work.date_written %></p>
  <p><%= Work.human_attribute_name("copyright") %>: <%= @work.copyright %></p>
  <p><%= Work.human_attribute_name("language_name") %>: <%= @work.language_name %></p>
  <p><%= Work.human_attribute_name("publisher") %>: <%= @work.publisher %></p>
</div>

<h2><%= Artist.model_name.human.pluralize %></h2>
<table>
  <tbody>
    <% @work.artist_wiki_links.each do |artist| %>
    <tr>
      <td><%= artist_wiki_link_path(artist) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2><%= Recording.model_name.human.pluralize %></h2>
<% if defined? @work.recording_wiki_links and @work.recording_wiki_links.length > 0 %>
<table>
  <tbody>
  	<tr>
	  	<th><%= Work.human_attribute_name("title") %></th>
  		<th><%= Recording.human_attribute_name("recording_date") %></th>
  	</tr>
    <% @work.recording_wiki_links.each do |recording_wiki_link|
    	begin
		  	recording = Recording.find(recording_wiki_link.reference[4, 25]) %>
				<tr>
					<td><%= recording_wiki_link_path(recording_wiki_link) %></td>
					<td><%= recording.date_released %></td>
				</tr>
			<% rescue %>
					<tr>
						<td><%= recording_wiki_link_path(album_wiki_link) %></td>
						<td></td>
					</tr>
			<% end %>					
    <% end %>
  </tbody>
</table>
<% else %>
	<!-- TODO: What do we want to show when a work has no recordings? -->
<% end %>

<h2><%= Work.human_attribute_name("lyrics") %></h2>
<p><%= @work.lyrics %></p>
<h2><%= Work.human_attribute_name("chords") %></h2>
<p><%= @work.chords %></p>

<%= render :partial=>'links' %>


