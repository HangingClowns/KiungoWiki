require 'ostruct'

# M2i3WebBase
module M2i3WebBase
  module PageHelper
    # output the page title on the page and set the :title content for usage in the layout
    def title(text, header_text=nil)
      content_for :title, h(header_text || text)
      "<h1>#{text}</h1>"
    end  


    def table_for(collection, options={})
      unless collection.empty?
        klass = ActionController::RecordIdentifier.singular_class_name(collection.first).camelize.constantize
        columns = options[:columns] || []
        empty_groupt_text = options[:empty_group_text] || "Nothing there..."


        concat('<table cellpadding="0" cellspacing="0"><thead><tr>')
        columns.each {|col|
          concat("<th class=\"#{col.to_s}\">#{klass.human_attribute_name(col.to_s)}</th>")
        }
        concat("</tr>\r</thead>")
        concat('<tbody>')
        collection.each {|item|
          concat('<tr>')
          
          formatted_item = OpenStruct.new

          columns.each {|col|
            formatted_item.send("#{col.to_s}=", h(item.send(col))) if item.respond_to?(col)
          }

          yield item, formatted_item if block_given?

          columns.each {|col|
           concat("<td class=\"#{col.to_s}\">#{formatted_item.send(col)}</td>")
          }

          concat("</tr>\r")
        }

        concat("</tbody>\r")
        concat('</table>')
      else
        concat('<p class="empty_group">Nothing there...</p>')
      end



     
    end
  end
end
